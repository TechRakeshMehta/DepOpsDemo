<%@ Page Language="C#" AutoEventWireup="true" Inherits="CoreWeb.Messaging.Views.Message"
    Title="Message" StylesheetTheme="NoTheme" Codebehind="Message.aspx.cs" %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head id="Head1" runat="server">
    <title></title>
    <style type="text/css">
        html
        {
            overflow: auto !important;
        }
        body
        {
            font-size: 16px;
            padding: 0;
            margin: 0;
            font-family: Segoe UI,Arial,Sans-Serif;
        }
        
        /*Header styles*/
        .header
        {
            background-color: #efefef;
            padding: 5px;
            border-bottom: 1px solid #adadad;
            color: #5D5D5D;
        }
        .header .subject
        {
            font-size: 18px;
            font-weight: bold;
            color: #5D5D5D;
        }
        .header .senders
        {
            font-size: 14px;
            font-weight: bold;
        }
        .header .receivers, .header .copies, .header .date
        {
            font-size: 12px;
        }
        .header span
        {
            font-weight: bold;
        }
        
        /*Message body Styles*/
        .message
        {
            padding: 10px;
            font-size: 12px;
        }
        
        
        .previous .header
        {
            background-color: transparent;
            border-top: 1px solid #adadad;
            margin-top: 20px;
            border-bottom: none;
            padding: 10px 10px 0 10px;
        }
        .previous .subject, .previous .senders, .previous .receivers, .previous .copies, .previous .date
        {
            font-size: 1em;
            font-weight: normal;
            color: Black;
        }
        .previous .message
        {
            color: Blue;
        }
        
        .hrClass
        {
            border-width: 1px;
        }
        blockquote
        {
            margin-top: 0px !important;
            margin-bottom: 0px !important;
        }
    </style>
</head>
<body>
    <form id="form1" runat="server">
    <div id="msgBodyContent">
        <asp:Literal ID="lblMessageDetails" runat="server"></asp:Literal>
    </div>
    </form>
</body>
</html>
