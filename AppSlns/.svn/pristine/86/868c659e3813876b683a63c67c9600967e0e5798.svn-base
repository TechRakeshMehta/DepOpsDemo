<div id="bodyBlock" class="container-fluid">
  <section class="p-2">
    <div class="row">

      <div class="col-md-12 bg-white shadow-sm rounded py-3">
        <div class="col-12 text-center mb-2 mt-3">
          <img src="images/imgLogo.png" alt="Complio" />
        </div>
        <div class="col-12 text-center ">
          <span style="color: #8C1921;">
            <h4 ID="RECOVERACCOUNT"></h4>
            <hr style="background-color: #8C1921">
          </span>

        </div>
        <div class="col-md-12">
          <label id="RECOVERUSERPSWD"></label>
        </div>
        <div class="col-md-12 ">
<p>
          <span id="PLSENTEREMAIL"></span>
          <span style="color: red">*</span>
          <span id="REQUIREDMARK"></span>
        </p>
        </div>
        <form [formGroup]="forgotPasswordForm">
          <div class="validationColor col-md-12 ">{{errorMsg}}</div>
          <div class="row">
              <div class="col-md-12 mb-2">
            <fieldset [disabled]="isSelectedTypeDisabled" class="ml-3">
                <div class="col-md-12 py-2">
                <label class="text-left required" id="RECOVER">
                </label>
                <div class="custom-control custom-radio ">
                  <input type="radio" id="customRadio1" formControlName="selectedType" value="1" name="selectedType" class="custom-control-input">
                  <label class="custom-control-label" for="customRadio1" id="USERNAME"></label>
                </div>
                <div class="custom-control custom-radio ">
                  <input type="radio" id="customRadio2" formControlName="selectedType" checked value="2" name="selectedType" class="custom-control-input">
                  <label class="custom-control-label" for="customRadio2" id="PASSWORD"></label>
                </div>
            </div>

            </fieldset>
          </div>
            <div  class="col-md-12 mb-2">
              <div class="col-md-8 mb-2 col-sm-12">
                <label class=" text-left required" for="email" id="EMAIL">
                </label>
                <input id="email" [readOnly]="isEmailDisabled" name="email" required type="text" class="form-control " placeholder="" formControlName="email" [ngClass]="displayFieldCss('email')"
                />
                <app-field-error-display [displayError]="isError('email')" errorMsg="{{errorMessage('email')}}">
                </app-field-error-display>
              </div>
            </div>
            <div class="col-md-12 mb-2">
                <div class="col-md-8 mb-2 col-sm-12"  >
                    <label class="text-left"  for="verificationCode" id="VERIFICATIONCODE"></label>
                <input id="verificationCode" [readOnly]="isVerificateCodeDisabled" formControlName="verificationCode" required type="text" name="verificationCode" class="form-control "
                  placeholder="" />
              </div>
            </div>
          </div>
          <div class="row py-5">
            <div class="col-md-12 d-flex justify-content-center">
              <button type="button" [disabled]="IsgenCodeDisabled" class="btn btn-primary mr-1" (click)="generateCode()">
                <i class="fas fa-key"></i>
                <label id="GENRTCODE" class="label-on-button"></label>
              </button>
              <button type="button" [disabled]="IsSubmitDisabled" class="btn btn-primary mr-1" (click)="onSubmit()">
                  <i class="fa fa-paper-plane"></i>
                <label id="SUBMIT" class="label-on-button "></label>
              </button>
              <button type="button" routerLink="/" class="btn btn-primary ">
                <i class="fas fa-times pr-1"></i>
                <label id="CNCL" class="label-on-button "></label>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
</div>