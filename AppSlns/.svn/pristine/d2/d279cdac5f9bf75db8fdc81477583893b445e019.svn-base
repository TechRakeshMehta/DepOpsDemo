<%@ Master Language="C#" AutoEventWireup="true"
    MasterPageFile="~/Messaging/Masters/ModuleMaster.master" Inherits="CoreWeb.Messaging.MasterPages.MessagingMaster" CodeBehind="MessagingMaster.master.cs" %>

<%@ Register TagPrefix="infs" Namespace="INTERSOFT.WEB.UI.WebControls" Assembly="INTERSOFT.WEB.UI" %>
<%@ Register TagPrefix="telerik" Namespace="Telerik.Web.UI" Assembly="Telerik.Web.UI" %>
<asp:Content ID="Content1" ContentPlaceHolderID="ToolBarContent" runat="server">
    <infs:WclResourceManagerProxy ID="WclResourceManagerProxy1" runat="server">
        <infs:LinkedResource ResourceType="JavaScript" Path="~/Resources/Mod/Messaging/messaging.js" />
        <infs:LinkedResource ResourceType="StyleSheet" Path="~/Resources/Mod/Messaging/messaging.css" />
    </infs:WclResourceManagerProxy>
    <input type="hidden" id="hdnSubscriptionStatus" />
    <asp:HiddenField id="hdntimeout" runat="server">
    </asp:HiddenField>
        <asp:HiddenField id="hdnIsApplicantAllowToSendMessages" runat="server" Value="true" >
    </asp:HiddenField>
    <infs:WclToolBar runat="server" ID="tlbMessageMain" EnableViewState="false" Width="100%"
        OnClientButtonClicked="btntoolbar_clicked">
        <Items>
            <telerik:RadToolBarButton CommandName="NewMessage" Text="New" Value="Compose"
                ImageUrl="~/Resources/Mod/Messaging/Icons/new.png" ToolTip="Create a new message">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarButton IsSeparator="true">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarButton Text="Print" CommandName="Print" ImageUrl="~/Resources/Mod/Messaging/icons/print.png"
                ImagePosition="Left" ToolTip="Print the selected items" />
            <telerik:RadToolBarButton IsSeparator="true">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarButton Text="Delete" CommandName="Delete" ImageUrl="~/Resources/Mod/Messaging/icons/delete.png"
                ImagePosition="Left" ToolTip="Delete selected items" />
            <telerik:RadToolBarButton IsSeparator="true">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarSplitButton CommandName="MoreFolders" Value="MoveToFolders" Text="Move To"
                ImageUrl="~/Resources/Mod/Messaging/icons/move.png" ImagePosition="Left" EnableDefaultButton="false" ToolTip="Move selected items to another folder">
                <Buttons>
                    <%-- <telerik:RadToolBarButton Text="Liberty Admins">
                    </telerik:RadToolBarButton>
                    <telerik:RadToolBarButton Text="FSU Mails">
                    </telerik:RadToolBarButton>
                    <telerik:RadToolBarButton IsSeparator="true">
                    </telerik:RadToolBarButton>
                    <telerik:RadToolBarButton CommandName="MoreFolders" Text="More Folders...">
                    </telerik:RadToolBarButton>--%>
                </Buttons>
            </telerik:RadToolBarSplitButton>
            <telerik:RadToolBarButton IsSeparator="true">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarButton Text="Manage Template" CommandName="ManageTemplate">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarButton IsSeparator="true">
            </telerik:RadToolBarButton>
            <%--<telerik:RadToolBarButton CommandName="SuscibeExternalEmail" Value="Suscribe" ImagePosition="Left">
            </telerik:RadToolBarButton>--%>
            <telerik:RadToolBarButton Text="Search Mail" CommandName="SearchMail" ImageUrl="~/Resources/Mod/Messaging/Icons/searchdir.png" ToolTip="Search the current folder for text within the From:, To:, Subject, or Body of all emails">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarButton IsSeparator="true">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarButton Text="Reply" CommandName="Reply" ImageUrl="~/Resources/Mod/Messaging/icons/reply.png"
                ImagePosition="Left" ToolTip="Reply to the sender of this message " />
            <telerik:RadToolBarButton IsSeparator="true">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarButton Text="Reply All" CommandName="ReplyAll" ImageUrl="~/Resources/Mod/Messaging/icons/replyall.png"
                ImagePosition="Left" ToolTip="Reply to the sender and all recipients of this message" />
            <telerik:RadToolBarButton IsSeparator="true">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarButton Text="Forward" CommandName="Forward" ImageUrl="~/Resources/Mod/Messaging/icons/forward.png"
                ImagePosition="Left" ToolTip="Forward this message" />
            <telerik:RadToolBarButton IsSeparator="true">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarSplitButton Text="More" ImagePosition="Left" EnableDefaultButton="false"
                ImageUrl="~/Resources/Mod/Messaging/icons/more.png" ToolTip="Additional actions for this message">
                <Buttons>
                    <telerik:RadToolBarButton Text="Mark as read" CommandName="" AccessKey="0">
                    </telerik:RadToolBarButton>
                    <telerik:RadToolBarButton Text="Mark as flagged" CommandName="chngFlag" AccessKey="1">
                    </telerik:RadToolBarButton>
                </Buttons>
            </telerik:RadToolBarSplitButton>
            <telerik:RadToolBarButton IsSeparator="true">
            </telerik:RadToolBarButton>
            <telerik:RadToolBarButton CommandName="Rules" Text="Message Receiving Rules" Value="Rules"
                ImageUrl="~/Resources/Mod/Messaging/Icons/new.png">
            </telerik:RadToolBarButton>
        </Items>
    </infs:WclToolBar>
</asp:Content>
